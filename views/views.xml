<odoo>
  <data>

    <!-- Vista de Lista (Tree) -->
    <record model="ir.ui.view" id="view_servicio_guarderia_tree">
      <field name="name">servicio.guarderia.tree</field>
      <field name="model">servicio.guarderia</field>
      <field name="arch" type="xml">
        <tree string="Servicios de Guardería">
          <field name="name" string="Monitor"/>
          <field name="start" string="Inicio"/>
          <field name="stop" string="Fin"/>
          <field name="rango_edad"/>
          <field name="location" string="Ubicación"/>
        </tree>
      </field>
    </record>

    <!-- Vista de Formulario -->
    <record model="ir.ui.view" id="view_servicio_guarderia_form">
      <field name="name">servicio.guarderia.form</field>
      <field name="model">servicio.guarderia</field>
      <field name="arch" type="xml">
        <form string="Servicio de Guardería">
          <sheet>
            <group>
                <group string="Información del Monitor (Empleado)">
                    <field name="name" string="Nombre del Monitor"/>
                    <field name="work_email"/>
                    <field name="mobile_phone"/>
                </group>
                <group string="Detalles del Servicio">
                    <field name="rango_edad"/>
                    <field name="descripcion"/>
                </group>
            </group>
            <group string="Horario y Planificación (Evento)">
                <group>
                    <field name="start" string="Fecha Inicio"/>
                    <field name="stop" string="Fecha Fin"/>
                    <field name="duration" widget="float_time"/>
                </group>
                <group>
                    <field name="location"/>
                    <field name="allday"/>
                </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de Ventana -->
    <record model="ir.actions.act_window" id="action_servicio_guarderia">
      <field name="name">Servicios de Guardería</field>
      <field name="res_model">servicio.guarderia</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Elementos de Menú -->
    <menuitem name="Guardería" id="menu_root_guarderia" sequence="10"/>
    
    <menuitem name="Servicios" id="menu_servicio_guarderia" parent="menu_root_guarderia"
              action="action_servicio_guarderia" sequence="1"/>

  </data>
</odoo>
